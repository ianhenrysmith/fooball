- content_for(:header, "Editing Your Profile")

= link_to '<< Back to Profile', user_path(@user), class: 'btn-xs btn-default btn'

= form_for @user, html: { class: 'form-horizontal' } do |f|
  
  .form-group
    %label.col-sm-2.control-label Name

    .col-sm-10
      = f.text_field :name, class: 'form-control', placeholder: 'Name'

  .form-group
    %label.col-sm-2.control-label Profile Image

    .col-sm-10
      =f.file_field :asset


  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Save", class: 'btn btn-primary'