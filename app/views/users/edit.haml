- content_for(:header, "Editing Your Profile")

= link_to 'Back to Profile', user_path(@user), class: 'btn-xs btn-default btn'

= form_for @user, html: { class: 'form-horizontal' } do |f|
  
  .form-group
    %label.col-lg-1.col-lg-offset-2 Name

    .col-lg-8
      = f.text_field :name, class: 'form-control', placeholder: 'Name'

  .form-group
    %label.col-lg-1.col-lg-offset-2 Pic

    .col-lg-8
      =f.file_field :asset

  .form-group
    %label.col-lg-1.col-lg-offset-2 Email

    %label.col-lg-8= @user.email


  .form-group
    .col-lg-offset-3.col-lg-8
      = f.submit "Save", class: 'btn btn-primary'